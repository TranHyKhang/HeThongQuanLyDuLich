@model IEnumerable<HeThongQuanLyDuLich.Models.HinhAnh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.imageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tour.tourName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiHinhAnh.loaiHinhAnh1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            <img src="/HinhAnh/RetrieveImage/@item.IDHinhAnh" height=100 width=200 />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tour.tourName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiHinhAnh.loaiHinhAnh1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IDHinhAnh }) |
            @Html.ActionLink("Details", "Details", new { id = item.IDHinhAnh }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IDHinhAnh })
        </td>
    </tr>
}

</table>
