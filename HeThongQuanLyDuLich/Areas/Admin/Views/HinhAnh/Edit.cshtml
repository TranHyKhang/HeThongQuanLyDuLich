@model HeThongQuanLyDuLich.Models.HinhAnh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa hình ảnh</h2>

@using (Html.BeginForm("Edit", "HinhAnh", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDHinhAnh)

        <div class="form-group">
            <input type="file" name="ImageData" id="ImageData" class="control-label col-md-2" />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDTour, "IDTour", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDTour", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDTour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDLoaiHinhAnh, "IDLoaiHinhAnh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDLoaiHinhAnh", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDLoaiHinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <button class="btn btn-danger my-button">
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "my-class" })
                </button>
            </div>
        </div>
    </div>
}
