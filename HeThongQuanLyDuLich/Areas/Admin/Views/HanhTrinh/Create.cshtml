        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.moTaHanhTrinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.moTaHanhTrinh, new { @class = "form-control textAreaStyle", @rows = "8" })

                @Html.ValidationMessageFor(model => model.moTaHanhTrinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
                <button class="btn btn-danger my-button">
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "my-class" })
                </button>
            </div>
        </div>
    </div>
}

