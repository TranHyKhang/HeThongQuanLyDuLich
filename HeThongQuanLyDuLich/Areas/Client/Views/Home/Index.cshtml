</head>
<body id="bodi" style="padding:0">
    <div id="fh5co-wrapper">
        <div id="fh5co-page">
            <div class="fh5co-hero">
                <div class="fh5co-overlay"></div>
                @*<div class="fh5co-overlay"></div>*@
                <div class="fh5co-cover text-center" data-stellar-background-ratio="0.5" style="background-image:url(../../../../Content/image/wp2004047-travelling-wallpapers.jpg);">
                    <div class="desc animate-box">
                        <h2>Du lịch Việt Nam</h2>
                        <span><a class="btn btn-primary btn-lg" href="#">Đặt Tour</a></span>
                    </div>
                </div>
            </div>
            <div class="fh5co-listing">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            
                            <div class="col-md-4 col-sm-4 fh5co-item-wrap">
                                <a href="@Url.Action("Index","DatTour", new { id = item.IDTour})" class="fh5co-listing-item">
                                    <img src="~/Content/image/mb.jpg" alt="Free HTML5 Bootstrap Template by FreeHTML5.co" class="img-responsive">
                                    <div class="fh5co-listing-copy">
                                        <h2>@item.tourName</h2>
                                        <span class="icon">
                                            <i class="fa fa-chevron-right"></i>
                                        </span>
                                    </div>
                                </a>
                            </div>
                            
                        }

                        <!-- END 3 row -->
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-4 fh5co-item-wrap">
                                <div class="fh5co-listing-copy">
                                    <p>
                                       @item.tourDescription
                                    </p>
                                </div>

                            </div>

                        }
                            <!-- END 3 row -->


                        </div>
                </div>
            </div>
            <div class="fh5co-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 fh5co-news">
                            <h3>Tin Tức</h3>
