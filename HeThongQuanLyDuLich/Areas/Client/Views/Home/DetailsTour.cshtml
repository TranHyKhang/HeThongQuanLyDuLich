@model HeThongQuanLyDuLich.Models.Tour

@{
    ViewBag.Title = "DetailsTour";
    
}
<body class="bodii" style="background-image:url(../../../../Content/image/Login.png);background-size: cover;">
    <div id="fh5co-wrapper" style="padding-top:100px">
        <div id="fh5co-page">
            <div class="container contact-form body" style="background-color: rgb(0,0,0, .6);box-shadow: 0px 0px 10px 3px gray;color: white;padding:10px">
                <h2 class="text-center" style="color:white;">Chi Tiết Tour</h2>
                <hr>
                <div class="form-row" style="padding:30px">
                    <form>
                        <div>
                            <div class="form-group text-center">
                                <img src="~/Content/image/mb.jpg" width="350px" height="350px" />
                            </div>
                            <div class="form-group ">
                                <label>Mã Tour:</label>
                                <text> @Html.DisplayFor(model => model.IDTour)</text>
                            </div>

                            <div class="form-group">
                                <label>Tên Tour:</label>
                                <text>@Html.DisplayFor(model => model.tourName)</text>
                            </div>

                            <div class="form-group">
                                <label>Mô Tả Tour:</label>
                                <text>@Html.DisplayFor(model => model.tourDescription)</text>
                            </div>

                            <div class="form-group">
                                <label>Số Lượng Khách Tối Đa:</label>
                                <text>@Html.DisplayFor(model => model.soLuongKhachToiDa)</text>&emsp;&emsp;&emsp;&emsp;
                                <label>Số Lượng Khách Hiện Tại:</label>
                                <text>@Html.DisplayFor(model => model.soLuongKhachHienTai)</text>
                            </div>
                            <div class="form-group">
                                <label>Tình Trạng Tour:</label>
                                <text>@Html.DisplayFor(model => model.tinhTrangTour)</text>&emsp;&emsp;
                                <label>Mã Hành Trình:</label>
                                <text>@Html.DisplayFor(model => model.IDHanhTrinh)</text>
                            </div>
                            <div class="form-group">
                                <label>Mã Dịch Vụ:</label>
                                <text>@Html.DisplayFor(model => model.IDDichVu)</text>&emsp;&emsp;
                                <label>Mã Khách Sạn:</label>
                                <text>@Html.DisplayFor(model => model.IDKhachSan)</text>
                            </div>

                            <div class="form-group">
                                <label>Mã Giá:</label>
                                <text>@Html.DisplayFor(model => model.gia)</text>&emsp;&emsp;
                                <label>Mã Khuyến Mãi:</label>
                                <text> @Html.DisplayFor(model => model.IDKhuyenMai)</text>
                            </div>

                        </div>
                    </form>
                    <p class="text-center">
                        <button type="submit" class="btn btn-primary" style="font-size:15px">Đặt Tour</button><br />
                        @Html.ActionLink("Trở Về", "ListTour")
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>