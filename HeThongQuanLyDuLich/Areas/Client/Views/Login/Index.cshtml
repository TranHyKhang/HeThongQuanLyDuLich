@model HeThongQuanLyDuLich.Areas.Client.Models.LoginModel
@{ 
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/styles/LoginStyle.css">

    <style>
        .danger-text {
            font-weight: 700!important
        }
        .haha ul {
            list-style-type: none !important;
            padding: 0;
            text-align: center;
            font-weight: 700
        }

        .haha {
            font-weight: 700;
            text-align: center;
            display: block;
            margin-bottom: 1rem
        }
    </style>
</head>
<body class="img js-fullheight" style="background-image: url(../../../../Content/image/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-2">
                    <h2 class="heading-section" style="font-weight: 700">Travel</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationMessage("DangNhapKhongHopLe", new { @class="text-danger haha"})
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger danger-text" })
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Email", @autofocus = "autofocus" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class="text-danger danger-text"})
                                @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "Mật khẩu", @type="password"})
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex" style="justify-content: center">
                                @*<div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        @Html.CheckBoxFor(model => model.RememberMe)
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>*@
                                <div class="w-50 text-md-center">
                                    <a href="/Client/SignUp" style="color: #fff">Sign Up</a>
                                </div>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center" style="margin-bottom: 4.5rem">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
