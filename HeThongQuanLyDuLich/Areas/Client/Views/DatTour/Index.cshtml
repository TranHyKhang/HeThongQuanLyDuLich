@model HeThongQuanLyDuLich.Areas.Client.Models.ThongTinDatVe
@{
    ViewBag.Title = "Index";
}

!<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style type="text/css">
        .form-group{
          align-self:center;
        }

    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.Label("Tên Khách Hàng:")
            @Html.TextBoxFor(model => model.tenKH, new { @class = "form-control", @placeholder = "Họ Tên", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.Label("Điện Thoại:")
            @Html.TextBoxFor(model => model.soDT, new { @class = "form-control", @placeholder = "Điện Thoại", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.Label("Địa Chỉ:")
            @Html.TextBoxFor(model => model.diaChi, new { @class = "form-control", @placeholder = "Địa Chỉ", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.Label("CMND:")
            @Html.TextBoxFor(model => model.cmnd, new { @class = "form-control", @placeholder = "Cmnd", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.Label("Số Lượng")
            @Html.TextBoxFor(model => model.soLuongKhach, new { @class = "form-control", @placeholder = "Số Lượng Khách", @autofocus = "autofocus" })
        </div>
        <!--Tour infor-->
        <div class="form-group">
           
        
            <p>@Html.LabelFor(model => model.tour.IDTour)</p> 
            <p> @Html.LabelFor(model => model.tour.tourName)</p>
            <p>@Html.LabelFor(model => model.tour.tourDescription)</p>
            <p>@Html.LabelFor(model => model.tour.DichVu)</p>
            <p>@Html.LabelFor(model => model.tour.HanhTrinh)</p>
            <p> @Html.LabelFor(model => model.tour.gia)</p>
           
          
        </div>
    }
</body>
</html>
